@{
    Layout = "_Layout";
}
<style>

    .customNavbar {
        position: sticky;
        margin: 0;
        width: 100vw;
        background-color: #000040;
        color: wheat;
        height: 8vh;
    }

    .sidebar {
        position: fixed;
        left: 0;
        background: #A9B388;
        width: 13vw;
        height: 94vh;
        display: flex;
        flex-direction: column;
        color: #ffff;
        overflow: hidden;
    }

    .navbar a {
        color: #FEFAE0;
        font-size: 17px;
    }

    .window {
        position: absolute;
        height: 92vh;
        width: 100vw;
        background-image: url(/projectImages/FootballField.jpg);
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    .barIcon {
        margin-top: 1px;
        margin-left: 11vw;
    }

    #myIcon {
        --animate-repeat: infinite;
        --animate-delay: 100s;
        --animate-duration: 15s;
    }

    #logo {
        --animate-repeat: infinite;
        --animate-delay: 100s;
        --animate-duration: 15s;
    }
</style>


